<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/main">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/guideline1"
            app:layout_constraintGuide_percent="0.02"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.3"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.02"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.99"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event:"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:id="@+id/first"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pajama Party"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/first"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/first" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details:"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:id="@+id/second"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/first" />

        <TextView
            android:id="@+id/eventDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Starting at 6pm this event will have a lot of fun in it, it is a very classical pajama party in which people will come wearing pajamas"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/second" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:id="@+id/third"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/eventDetails" />

        <TextView
            android:id="@+id/fromDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/05, 2024"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/third"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="to"
            android:id="@+id/aaise"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/fromDate"
            app:layout_constraintStart_toEndOf="@id/fromDate"
            app:layout_constraintBottom_toBottomOf="@id/fromDate"
            android:textColor="@color/orange2"
            android:textSize="15sp"  />

        <TextView
            android:id="@+id/toDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13/05, 2024"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/fromDate"
            app:layout_constraintStart_toEndOf="@id/aaise"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            android:id="@+id/last"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/fromDate" />

        <TextView
            android:id="@+id/fromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:30 PM"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/last"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="to"
            android:id="@+id/waise"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/fromTime"
            app:layout_constraintStart_toEndOf="@id/fromTime"
            app:layout_constraintBottom_toBottomOf="@id/fromTime"
            android:textColor="@color/orange2"
            android:textSize="15sp"  />

        <TextView
            android:id="@+id/toTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:00 AM"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/fromTime"
            app:layout_constraintStart_toEndOf="@id/waise"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@id/fromTime"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/line"
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/view2"
            app:layout_constraintTop_toBottomOf="@id/image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="Connect With Host:"
            android:id="@+id/contact"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/emailText"
            android:textSize="12sp"
            android:textColor="@color/navy_blue"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/contact"
            app:layout_constraintStart_toEndOf="@id/contact"
            app:layout_constraintBottom_toBottomOf="@id/contact"
            android:text="host@email.com"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
